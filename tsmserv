    - name: Verify user configuration
      shell: |
        getent passwd {{ instance_name }} | awk -F: '{if ($4 == 2020 && $6 == "/tsmdata/{{ instance_name }}/cfg" && $7 == "/bin/bash") print "OK"; else print "NOTOK"}'
      register: user_check
      ignore_errors: yes

    - name: Add user configuration check to test results
      set_fact:
        test_results: "{{ test_results }}\nUser {{ instance_name }} configuration: {{ user_check.stdout }}"

    - name: Display user configuration check result
      debug:
        msg: "User {{ instance_name }} configuration: {{ user_check.stdout }}"
