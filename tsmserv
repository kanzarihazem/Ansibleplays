- name: Download TSM package
  get_url:
    url: "{{ registry_server }}{{ registry_url }}/SPBAClient-AGENT_{{ tsm_version }}_{{ tsm_rules }}_LINUX_GEN_FR-IT.tar"
    dest: "{{ deploy_dir }}/SPBAClient-AGENT_{{ tsm_version }}_{{ tsm_rules }}_LINUX_GEN_FR-IT.tar"
  when: rpm_check is succeeded
  tags:
    - update

- name: Unarchive TSM package
  unarchive:
    src: "{{ deploy_dir }}/SPBAClient-AGENT_{{ tsm_version }}_{{ tsm_rules }}_LINUX_GEN_FR-IT.tar"
    dest: "{{ deploy_dir }}"
    remote_src: false
  register: unarchive_result
  when: rpm_check is succeeded
  tags:
    - update
